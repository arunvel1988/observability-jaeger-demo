{
  "id": null,
  "uid": "flask-metrics-demo",
  "title": "Flask Metrics Demo",
  "tags": ["flask", "prometheus", "demo"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests in Progress",
      "id": 1,
      "datasource": {
        "type": "prometheus",
        "uid": "mimir-ds"
      },
      "targets": [
        {
          "expr": "flask_inprogress_requests",
          "legendFormat": "Endpoint {{endpoint}}",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Request Count",
      "id": 2,
      "datasource": {
        "type": "prometheus",
        "uid": "mimir-ds"
      },
      "targets": [
        {
          "expr": "flask_request_count_total",
          "legendFormat": "Endpoint {{endpoint}}",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "unit": "short"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Request Latency (seconds)",
      "id": 3,
      "datasource": {
        "type": "prometheus",
        "uid": "mimir-ds"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(flask_request_latency_seconds_bucket[1m])) by (le, endpoint))",
          "legendFormat": "P95 {{endpoint}}",
          "format": "time_series"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(flask_request_latency_seconds_bucket[1m])) by (le, endpoint))",
          "legendFormat": "P50 {{endpoint}}",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Work Endpoint Duration (seconds)",
      "id": 4,
      "datasource": {
        "type": "prometheus",
        "uid": "mimir-ds"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(flask_work_time_seconds_bucket[1m])) by (le, endpoint))",
          "legendFormat": "P95 {{endpoint}}",
          "format": "time_series"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(flask_work_time_seconds_bucket[1m])) by (le, endpoint))",
          "legendFormat": "P50 {{endpoint}}",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "datasource",
        "label": "Prometheus Datasource",
        "query": "prometheus",
        "current": {
          "text": "Mimir",
          "value": "mimir-ds"
        },
        "hide": 0
      }
    ]
  }
}
