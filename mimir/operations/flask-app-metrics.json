{
  "dashboard": {
    "id": null,
    "uid": "flask-metrics-demo",
    "title": "Flask Metrics Demo",
    "tags": ["flask", "prometheus", "demo"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "type": "timeseries",
        "title": "CPU Usage (%)",
        "id": 1,
        "datasource": "$datasource",
        "targets": [
          {
            "expr": "flask_cpu_usage_percent",
            "legendFormat": "PID {{pid}}",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Memory Usage (MB)",
        "id": 2,
        "datasource": "$datasource",
        "targets": [
          {
            "expr": "flask_memory_usage_mb",
            "legendFormat": "PID {{pid}}",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "min": 0
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Requests in Progress",
        "id": 3,
        "datasource": "$datasource",
        "targets": [
          {
            "expr": "flask_inprogress_requests",
            "legendFormat": "Endpoint {{endpoint}}",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Request Count",
        "id": 4,
        "datasource": "$datasource",
        "targets": [
          {
            "expr": "flask_request_count_total",
            "legendFormat": "Endpoint {{endpoint}}",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "unit": "short"
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Request Latency (seconds)",
        "id": 5,
        "datasource": "$datasource",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(flask_request_latency_seconds_bucket[1m])) by (le, endpoint))",
            "legendFormat": "P95 {{endpoint}}",
            "format": "time_series"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(flask_request_latency_seconds_bucket[1m])) by (le, endpoint))",
            "legendFormat": "P50 {{endpoint}}",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "type": "datasource",
          "name": "datasource",
          "label": "Prometheus Datasource",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          },
          "hide": 0
        }
      ]
    }
  },
  "overwrite": true
}
